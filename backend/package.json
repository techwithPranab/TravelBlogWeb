{
  "name": "travel-blog-backend",
  "version": "1.0.0",
  "description": "Travel Blog Backend API with Node.js, Express, and MongoDB",
  "main": "dist/server.js",
  "scripts": {
    "dev": "node --max-old-space-size=4096 --expose-gc -r ts-node/register src/server.ts",
    "dev:watch": "nodemon --exec \"node --max-old-space-size=4096 --expose-gc -r ts-node/register\" src/server.ts",
    "dev:nodemon": "nodemon",
    "dev:legacy": "NODE_OPTIONS=\"--max-old-space-size=4096 --expose-gc\" nodemon src/server.ts",
    "build": "tsc && tsc-alias",
    "start": "NODE_OPTIONS=\"--max-old-space-size=4096\" node dist/server.js",
    "migrate": "ts-node -r tsconfig-paths/register src/scripts/migrate-subscriptions-and-itineraries.ts",
    "seed": "ts-node -r tsconfig-paths/register src/seedDatabase.ts",
    "seed:resources": "ts-node -r tsconfig-paths/register src/seeders/resourceSeeder.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.879.0",
    "@aws-sdk/s3-request-presigner": "^3.879.0",
    "@getbrevo/brevo": "^3.0.1",
    "@types/multer-s3": "^3.0.3",
    "@types/node-cron": "^3.0.11",
    "@types/pdfkit": "^0.17.4",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.41.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "googleapis": "^159.0.0",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "json5": "^2.2.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "multer-s3": "^3.0.1",
    "node-cron": "^4.2.1",
    "nodemailer": "^6.10.1",
    "openai": "^6.16.0",
    "pdfkit": "^0.17.2",
    "sharp": "^0.33.5",
    "stripe": "^14.9.0",
    "tsconfig-paths": "^4.2.0",
    "xss": "^1.0.14"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/hpp": "^0.2.5",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.10.5",
    "@types/nodemailer": "^6.4.21",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "nodejs",
    "express",
    "mongodb",
    "typescript",
    "travel",
    "blog",
    "api"
  ],
  "author": "TechWithPranab",
  "license": "MIT"
}
