# Database
MONGODB_URI=mongodb://localhost:27017/travel-blog

# JWT
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRE=30d

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4.1-nano
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# OpenWeatherMap Configuration (get API key from https://openweathermap.org/api)
OPENWEATHER_API_KEY=your_openweathermap_api_key_here

# Environment
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# Cloudinary (for image uploads)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Email Configuration (Brevo SMTP)
BREVO_USERNAME=your-brevo-username
BREVO_PASSWORD=your-brevo-password
BREVO_SMTP_HOST=smtp-relay.brevo.com
BREVO_SMTP_PORT=587
BREVO_SMTP_SECURE=false

# Email settings
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=BagPackStories
ADMIN_EMAIL=admin@yourdomain.com
SUPPORT_EMAIL=support@yourdomain.com

# Timezone for email scheduler
TIMEZONE=America/New_York
